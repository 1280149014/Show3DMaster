<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0001"
    tools:context=".ui.MainActivity">

    <org.andresoviedo.android_3d_model_engine.view.ModelSurfaceView
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:autoAnimation="true"
        app:clickAble="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/appLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/backView"
        android:orientation="horizontal">


        <org.andresoviedo.android_3d_model_engine.view.ModelSurfaceView
            android:id="@+id/app1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:autoAnimation="false"
            app:clickAble="true"
            app:objName="cube.obj"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/app2"
            app:layout_constraintTop_toBottomOf="@id/backView"
            app:layout_constraintVertical_bias="0.0" />

        <org.andresoviedo.android_3d_model_engine.view.ModelSurfaceView
            android:id="@+id/app2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@id/app1"
            app:layout_constraintTop_toBottomOf="@id/backView"
            app:layout_goneMarginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>